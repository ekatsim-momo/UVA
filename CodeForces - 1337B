#include<bits/stdc++.h>
using namespace std;
int main()
{
int n,x,a,b;
scanf("%d",&n);
while(n--)
{
    int ok=0;
    scanf("%d %d %d",&x,&a,&b);
    while(x>0)
    {
     if(x>10&&a>0)
     {
         x/=2;
         x+=10;
         a--;
     }
     else if(b>0)
     {
         x-=10;
         b--;
     }
     else
     {
         ok=1;
         break;
     }
    }
    if(ok)
        cout<<"NO\n";
    else
        cout<<"YES\n";
}
    return 0;
}
